#!/bin/sh

set -e
[ -n "$DEBUG" ] && set -ex

root=$(cd "$(dirname "$0")/.." && pwd)/
redis_pid="$root/tmp/redis.pid"
if [ -n "$DEBUG" ]; then
  OUTPUT="/dev/stdout"
else
  OUTPUT="/dev/null"
fi

postgres_start() {
  if ! pg_ctl status 1>$OUTPUT 2>$OUTPUT; then
    if \
      [ -z "$PGLOG" ] || \
      [ -z "$PGHOST" ] || \
      [ -z "$PGDATA" ] || \
      [ -z "$PGPORT" ]; then
          echo "Expected PGLOG, PGHOST, PGDATA, and PGPORT to be set" >&2
          echo "which are set automatically by shell.nix" >&2
          exit 1
    fi

    if [ ! -d "$PGDATA" ]; then
      initdb --auth=trust --no-locale --encoding=UTF8 1>$OUTPUT 2>$OUTPUT
    fi

    pg_ctl start \
      -l "$PGLOG" \
      -o "--port='$PGPORT' --unix_socket_directories='$PGHOST'" \
      1>$OUTPUT 2>$OUTPUT &
  fi
}

postgres_stop() {
  pg_ctl stop -D "$PGDATA" 1>$OUTPUT 2>$OUTPUT
}

postgres_status() {
  pg_ctl status 1>$OUTPUT
}

redis_start() {
  if ! redis-cli ping 1>$OUTPUT 2>$OUTPUT; then
    rm -f "$redis_pid"
    redis-server 1>$OUTPUT 2>$OUTPUT &
    echo $! >> "$redis_pid"
  fi
}

redis_stop() {
  if [ -e "$redis_pid" ]; then
    kill "$(cat "$redis_pid")"
    rm -f "$redis_pid"
  fi
}

redis_status() {
  redis-cli ping
}

show_help() {
  echo "Up:     bin/mainframe up"
  echo "        bin/mainframe u"
  echo "Down:   bin/mainframe down"
  echo "        bin/mainframe d"
  echo "Status: bin/mainframe status"
  echo "        bin/mainframe s"
}

up() {
  postgres_start
  redis_start
}

down() {
  postgres_stop
  redis_stop
}

status() {
  set +e
  if postgres_status 1>$OUTPUT 2>$OUTPUT; then
    echo "PortgreSQL: OK"
  else
    echo "PortgreSQL: ERROR"
  fi
  if redis_status 1>$OUTPUT 2>$OUTPUT; then
    echo "Redis: OK"
  else
    echo "Redis: ERROR"
  fi
  set -e
}

case "$1" in
  up|u) up ;;
  down|d) down ;;
  status|s) status ;;
  *) show_help; exit 1;;
esac
